<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
        <record id="sale_setting_inherit" model="ir.ui.view">
        <field name="name">sales.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <field name="group_proforma_sales" position="after">
                <group>

                      <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="quotation_amendment"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="quotation_amendment" string="Quotation Amendment"/>

                            </div>
                    </div>
                </group>
            </field>
        </field>
    </record>


</odoo>